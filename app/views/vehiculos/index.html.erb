<body>
<p id="notice"><%= notice %></p>
<div class="container">
  <div class="jumbotron">
<h1>Vehiculos</h1>
    <div class="table-responsive">
      <table class="table">
  <thead>
    <tr>
      <th>Placa del Carro</th>
      <th>Recorrido</th>
      <th>Pasajero</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vehiculos.each do |vehiculo| %>
      <tr>
        <td><%= vehiculo.modelo %></td>
        <td><%= vehiculo.recorrido.nombre %></td>
        <td><%= vehiculo.pasajero.nombre %></td>
        <td> <div class="btn-group" role="group" aria-label="...">
          <%= link_to "<span class='glyphicon glyphicon-eye-open'></span>".html_safe,
                      vehiculo, class: 'btn btn-default btn-sm active'%>
        </div>

        </td>
        <td> <div class="btn-group" role="group" aria-label="...">
          <%= link_to "<span class='glyphicon glyphicon-pencil'></span>".html_safe,
                     edit_vehiculo_path(vehiculo), class: 'btn btn-warning btn-sm active'%>
        </div>

        </td>

        <td> <div class="btn-group" role="group" aria-label="...">
          <%= link_to "<span class='glyphicon glyphicon-trash'></span>".html_safe,
                      vehiculo, method: :delete, data: { confirm: 'Eliminar?' }, class:"btn btn-success btn-sm active" %>
        </div>

        </td>

      </tr>
  <%end%>

  </tbody>



  <br>
</table>
</div>
</div>
</div>
</body>