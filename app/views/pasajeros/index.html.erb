<p id="notice"><%= notice %></p>

<div class="container">
  <div class="jumbotron">
    <%= link_to "<span class='glyphicon glyphicon-user'></span> Nuevo pasajero".html_safe,
                new_pasajero_path, class: 'btn btn-success btn-lg active'%>
<h1>Pasajeros</h1>

    <div class="table-responsive">
      <table class="table">
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pasajeros.each do |pasajero| %>
      <tr>
        <td><%= pasajero.nombre %></td>
        <td> <div class="btn-group" role="group" aria-label="...">
          <%= link_to "<span class='glyphicon glyphicon-eye-open'></span>".html_safe,
                      pasajero, class: 'btn btn-default btn-sm active'%>
        </div>

        </td>
        <td> <div class="btn-group" role="group" aria-label="...">
          <%= link_to "<span class='glyphicon glyphicon-pencil'></span>".html_safe,
                      edit_pasajero_path(pasajero), class: 'btn btn-warning btn-sm active'%>
        </div>

        </td>

        <td> <div class="btn-group" role="group" aria-label="...">
          <%= link_to "<span class='glyphicon glyphicon-trash'></span>".html_safe,
                      pasajero, method: :delete, data: { confirm: 'Eliminar?' }, class:"btn btn-success btn-sm active" %>
        </div>


      </tr>
  <%end%>

  </tbody>



  <br>
</table>
    </div>
  </div>
  </div>
</div>
</div>



</table>

